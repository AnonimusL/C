// Da li je neki broj prost ili ne?

#include<stdio.h>

int main(){    
int n,i,m=0,flag=0;    
printf("Unesite broj za proveru:");    
scanf("%d",&n);    
m=n/2;    
for(i=2;i<=m;i++)    
{    
if(n%i==0)    
{    
printf("Broj nije prost.\n");    
flag=1;    
break;    
}    
}    
if(flag==0)    
printf("Broj je prost.\n");     
return 0;  
 }    
